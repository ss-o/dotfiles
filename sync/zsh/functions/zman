#autoload
#
# -*- mode: zsh; sh-indentation: 2; indent-tabs-mode: nil; sh-basic-offset: 2; -*-
# vim: ft=zsh sw=2 ts=2 et

builtin setopt extended_glob

if [ $# = 0 ]; then
  builtin print -r "Usage: zman <keyword-to-search>"
  return 1
elif [ $# -gt 0 ]; then
  PAGER="less -g -s '+/^       "$1"'" command man zshall
  return 0
fi
