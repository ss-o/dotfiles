# https://git-scm.com/docs/git-config#_configuration_file

[user]
  useConfigOnly = true

[include]
  path = ~/.dotfiles/sync/git/gitconfig.d/ss-o.gitconfig

#[includeIf "gitdir:~/Codespace/GitHub/digital-teams/"]
#  path = ~/.gitconfig.d/digital-teams.gitconfig

#[includeIf "gitdir:~/Codespace/SourceForge/"]
#  path = ~/.gitconfig.d/sallsource.gitconfig

[commit]
	gpgsign = true

[credential]
	credentialStore = gpg

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[core]
  editor = micro
  filemode = true
	pager = diff-so-fancy | less --tabs=4 -RFXS
	commitGraph = true

[diff-so-fancy]
	first-run = false

[interactive]
	diffFilter = diff-so-fancy --patch

[color]
	branch = auto
	diff = auto
	interactive = auto
	log = auto
	status = auto
	ui = auto

[rerere]
	enabled = true
	autoupdate = 1

[format]
  signoff = true

[blame]
	date = relative

[diff]
	color = true
  renames = true
  submodule = log
	algorithm = patience
  mnemonicPrefix = true
	compactionHeuristic = true

[diff "bin"]
  textconv = hexdump -v -C

[grep]
  break = true
  heading = true
  lineNumber = true
  extendedRegexp = true

[mergetool]
  keepBackup = false
  keepTemporaries = false
  writeToTemp = true
  prompt = false

[fetch]
	prune = true

[pull]
  rebase = merges
  rebase = true

[push]
	default = current
  rebase = true
  followTags = true
	default = current
	autoSetupRemote = true

[rebase]
	autosquash = true
	instructionFormat = <%aN> %s [%ar]
	abbreviateCommands = true
	missingCommitsCheck = warn

[status]
  submoduleSummary = true
  showUntrackedFiles = all

[log]
  follow = true
  decorate = true

[init]
  defaultBranch = main

[help]
  autocorrect = 20

[advice]
  skippedCherryPicks = false

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[hub]
  protocol = git

[include]
  path = ~/.dotfiles/sync/git/gitconfig.d/aliases.gitconfig
[credential "https://dev.azure.com"]
	useHttpPath = true
