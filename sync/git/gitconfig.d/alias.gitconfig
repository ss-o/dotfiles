[alias]
  c-hist = log --pretty=format:\"%C(yellow)%h%Creset %ad | %Cgreen%s%Creset %Cred%d%Creset %Cblue[%an]\" --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	reset = reset --soft HEAD^
	graph = log --graph --oneline --decorate
	compare = difftool --dir-diff HEAD^ HEAD
  cmp = "!f() { git commit -m \"$@\"; }; f"
  g-new = "!f() { git cmp \"📦 [New]: $@\"; }; f"
  g-improve = "!f() { git cmp \"👌 [Improve]: $@\"; }; f"
  g-fix = "!f() { git cmp \"🐛 [Fix]: $@\"; }; f"
  g-release = "!f() { git cmp \"🚀 [Release]: $@\"; }; f"
  g-docs = "!f() { git cmp \"📖 [Docs]: $@\"; }; f"
  g-ci = "!f() { git cmp \"🤖 [CI]: $@\"; }; f"
 	g-major = "!f() { git cmp \"‼️ [Breaking]: $@\"; }; f"
  g-last = log -1 HEAD
  g-unstage = reset HEAD --

